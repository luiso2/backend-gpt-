# .htaccess para la carpeta mercatop-v2
# Este archivo debe ir DENTRO de la carpeta donde subas tu sitio Next.js

Options -MultiViews
RewriteEngine On

# Servir archivos HTML sin extensión
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Manejar rutas de Next.js
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [L]

# Seguridad
<FilesMatch "\.(env|json|lock|md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

# Comprimir archivos de texto
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para archivos estáticos de Next.js
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Archivos _next/static (inmutables)
    <FilesMatch "^_next/static/">
        ExpiresDefault "access plus 1 year"
        Header set Cache-Control "public, immutable, max-age=31536000"
    </FilesMatch>
    
    # Imágenes
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Fuentes
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    
    # HTML (sin cache para actualizaciones)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# CORS para fuentes y recursos
<IfModule mod_headers.c>
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|svg)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>
