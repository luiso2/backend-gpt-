# Wordfence WAF
<IfModule LiteSpeed>
php_value auto_prepend_file '/home/u517309027/domains/mercatop.com/public_html/wordfence-waf.php'
</IfModule>
<IfModule lsapi_module>
php_value auto_prepend_file '/home/u517309027/domains/mercatop.com/public_html/wordfence-waf.php'
</IfModule>
# END Wordfence WAF

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# Prevenir acceso directo a la carpeta mercatop-v2
RewriteCond %{THE_REQUEST} \s/+mercatop-v2/([^\s?]*) [NC]
RewriteRule ^ /%1 [R=301,L]

# Archivos y carpetas de WordPress - no tocar
RewriteCond %{REQUEST_URI} ^/(wp-admin|wp-includes|wp-content)/ [OR]
RewriteCond %{REQUEST_URI} ^/wp-.*\.php$ [OR]
RewriteCond %{REQUEST_URI} ^/xmlrpc\.php$ [OR]
RewriteCond %{REQUEST_URI} ^/wp-json/
RewriteRule ^ - [L]

# Si el archivo existe en la raíz, servirlo
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Todo lo demás va a index.php (que servirá Next.js)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L]
</IfModule>

# Headers de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>